<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <title>Genres|Moment</title>
  </head>
  <body>
    <header>
      <nav
        class="lg:h-20 lg:w-screen lg:flex lg: items-center lg:justify-between bg-zinc-900 text-orange-300 fixed z-10"
      >
        <p class="ml-24">moment</p>
        <ul class="lg:flex lg:justify-around lg:items-center lg:w-1/3 lg:h-20">
          <a href="/">Home</a>
          <a href="/festivals">All Festivals</a>
          <a href="/genres">All Genres</a>
        </ul>
      </nav>
      <section class="lg:py-24 lg:px-32">
        <h1
          class="lg:text-7xl bg-gradient-to-r from-pink-500 to-yellow-500 bg-clip-text text-transparent ml-16 my-6"
        >
          All Genres
        </h1>
        <div class="lg:flex lg:flex-wrap lg:px-12">
          <% genres.forEach((genre) => { %>
             <a class="bg-red-400 lg:w-60 lg:h-24 lg:flex lg:justify-center lg:items-center lg:rounded-full hover:transition ease-in hover:-translate-y-1 hover:scale-110 duration-300 m-4" href="/genres/<%= genre.id %>"><%= genre.genre %></a>
          <% }) %>
        </div>
      </section>
    </header>
  </body>
</html>
